[
  {
    "createSurface": {
      "surfaceId": "contact_form",
      "catalogId": "https://a2ui.dev/specification/0.9/standard_catalog_definition.json"
    }
  },
  {
    "updateComponents": {
      "surfaceId": "contact_form",
      "components": [
        {
          "id": "root",
          "component": "Column",
          "children": {"explicitList": ["title", "form_fields", "submit_button"]},
          "alignment": "stretch",
          "distribution": "start"
        },
        {
          "id": "title",
          "component": "Text",
          "text": {"literalString": "Contact Us"},
          "alignment": "center"
        },
        {
          "id": "form_fields",
          "component": "Column",
          "children": {"explicitList": ["first_name_field", "last_name_field", "email_field", "message_field"]},
          "alignment": "stretch",
          "distribution": "start"
        },
        {
          "id": "first_name_field",
          "component": "TextField",
          "label": {"literalString": "First Name *"},
          "value": {"path": "/form/firstName"},
          "variant": "shortText"
        },
        {
          "id": "last_name_field",
          "component": "TextField",
          "label": {"literalString": "Last Name *"},
          "value": {"path": "/form/lastName"},
          "variant": "shortText"
        },
        {
          "id": "email_field",
          "component": "TextField",
          "label": {"literalString": "Email *"},
          "value": {"path": "/form/email"},
          "variant": "shortText"
        },
        {
          "id": "message_field",
          "component": "TextField",
          "label": {"literalString": "Message"},
          "value": {"path": "/form/message"},
          "variant": "longText"
        },
        {
          "id": "submit_button",
          "component": "Button",
          "child": "button_text",
          "action": {"name": "submitContactForm"}
        },
        {
          "id": "button_text",
          "component": "Text",
          "text": {"literalString": "Send Message"}
        }
      ]
    }
  },
  {
    "updateDataModel": {
      "surfaceId": "contact_form",
      "path": "/form",
      "value": {
        "firstName": "",
        "lastName": "",
        "email": "",
        "message": ""
      }
    }
  }
]