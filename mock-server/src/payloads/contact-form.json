[
  {
    "createSurface": {
      "surfaceId": "contact_form",
      "catalogId": "https://a2ui.dev/specification/0.9/standard_catalog_definition.json"
    }
  },
  {
    "updateComponents": {
      "surfaceId": "contact_form",
      "components": [
        {
          "id": "root",
          "weight": 1.0,
          "component": {
            "Column": {
              "children": {"explicitList": ["title", "form_fields", "submit_button"]},
              "alignment": "stretch",
              "distribution": "start"
            }
          }
        },
        {
          "id": "title",
          "weight": 1.0,
          "component": {
            "Text": {
              "text": {"literalString": "Contact Us"},
              "alignment": "center"
            }
          }
        },
        {
          "id": "form_fields",
          "weight": 1.0,
          "component": {
            "Column": {
              "children": {"explicitList": ["first_name_field", "last_name_field", "email_field", "message_field"]},
              "alignment": "stretch",
              "distribution": "start"
            }
          }
        },
        {
          "id": "first_name_field",
          "weight": 1.0,
          "component": {
            "TextField": {
              "label": {"literalString": "First Name *"},
              "text": {"path": "/form/firstName"},
              "textFieldType": "shortText"
            }
          }
        },
        {
          "id": "last_name_field",
          "weight": 1.0,
          "component": {
            "TextField": {
              "label": {"literalString": "Last Name *"},
              "text": {"path": "/form/lastName"},
              "textFieldType": "shortText"
            }
          }
        },
        {
          "id": "email_field",
          "weight": 1.0,
          "component": {
            "TextField": {
              "label": {"literalString": "Email *"},
              "text": {"path": "/form/email"},
              "textFieldType": "shortText"
            }
          }
        },
        {
          "id": "message_field",
          "weight": 1.0,
          "component": {
            "TextField": {
              "label": {"literalString": "Message"},
              "text": {"path": "/form/message"},
              "textFieldType": "longText"
            }
          }
        },
        {
          "id": "submit_button",
          "weight": 1.0,
          "component": {
            "Button": {
              "child": "button_text",
              "action": {"name": "submitContactForm"}
            }
          }
        },
        {
          "id": "button_text",
          "weight": 1.0,
          "component": {
            "Text": {
              "text": {"literalString": "Send Message"}
            }
          }
        }
      ]
    }
  },
  {
    "updateDataModel": {
      "surfaceId": "contact_form",
      "path": "/form",
      "value": {
        "firstName": "",
        "lastName": "",
        "email": "",
        "message": ""
      }
    }
  }
]
