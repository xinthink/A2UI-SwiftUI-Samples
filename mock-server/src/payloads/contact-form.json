[
  {
    "version": "v0.9",
    "createSurface": {
      "surfaceId": "contact_form",
      "catalogId": "https://a2ui.dev/specification/0.9/standard_catalog_definition.json"
    }
  },
  {
    "version": "v0.9",
    "updateComponents": {
      "surfaceId": "contact_form",
      "components": [
        {
          "id": "root",
          "component": "Column",
          "children": ["title", "form_fields", "submit_button"],
          "justify": "start",
          "align": "stretch"
        },
        {
          "id": "title",
          "component": "Text",
          "text": "Contact Us",
          "align": "center"
        },
        {
          "id": "form_fields",
          "component": "Column",
          "children": ["first_name_field", "last_name_field", "email_field", "message_field"],
          "justify": "start",
          "align": "stretch"
        },
        {
          "id": "first_name_field",
          "component": "TextField",
          "label": "First Name *",
          "value": {"path": "/form/firstName"},
          "variant": "shortText"
        },
        {
          "id": "last_name_field",
          "component": "TextField",
          "label": "Last Name *",
          "value": {"path": "/form/lastName"},
          "variant": "shortText"
        },
        {
          "id": "email_field",
          "component": "TextField",
          "label": "Email *",
          "value": {"path": "/form/email"},
          "variant": "shortText"
        },
        {
          "id": "message_field",
          "component": "TextField",
          "label": "Message",
          "value": {"path": "/form/message"},
          "variant": "longText"
        },
        {
          "id": "submit_button",
          "component": "Button",
          "child": "button_text",
          "action": {
            "event": {
              "name": "submitContactForm"
            }
          }
        },
        {
          "id": "button_text",
          "component": "Text",
          "text": "Send Message"
        }
      ]
    }
  },
  {
    "version": "v0.9",
    "updateDataModel": {
      "surfaceId": "contact_form",
      "path": "/form",
      "value": {
        "firstName": "",
        "lastName": "",
        "email": "",
        "message": ""
      }
    }
  }
]
